<project name="ExtensionBuild" default="package" basedir="../">

	<property name="mozillasrc" value="${basedir}/../../mozilla/mozilla"/>

	<property name="xpidl.includes" value="-I ${mozillasrc}/xpcom/base -I ${mozillasrc}/uriloader/base -I ${mozillasrc}/netwerk/base/public -I ${mozillasrc}/xpcom/io"/>

	<target name="loadprops">
		<property file="${basedir}/extension.properties" prefix="extension"/>
		<property name="builddir" value="${basedir}/bin"/>
		<property name="outputdir" value="${basedir}"/>
	</target>
	
	<target name="development" if="extension.revision">
		<property name="extension.fullversion" value="${extension.version}.rev${extension.revision}"/>
	</target>
	
	<target name="release" unless="extension.revision">
		<property name="extension.fullversion" value="${extension.version}"/>
	</target>
	
	<target name="init" depends="loadprops,development,release">
		<mkdir dir="${builddir}"/>
		<available property="hascomponents" file="${basedir}/components"/>
	</target>
	
	<target name="clean" depends="init">
		<delete dir="${builddir}"/>
		<delete file="${outputdir}/${extension.name}.xpi"/>
	</target>
	
	<target name="preprocess" depends="init">
		<filter token="id" value="${extension.guid}"/>
		<filter token="version" value="${extension.fullversion}"/>
		<copy todir="${builddir}" filtering="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="**/*.in"/>
			</fileset>
			<mapper type="glob" from="*.in" to="*"/>
		</copy>
	</target>
	
	<target name="components" if="hascomponents">
		<apply executable="xpidl" dir="${basedir}/components" dest="${builddir}/components" failonerror="true">
			<mapper type="glob" from="*.idl" to="*.xpt"/>
			<fileset dir="${basedir}/components" includes="*.idl"/>
			<arg line="-m typelib -w -v"/>
			<arg line="${xpidl.includes} -e"/>
			<targetfile/>
		</apply>
	</target>
	
	<target name="copy" depends="init">
		<copy todir="${builddir}">
			<fileset dir="${basedir}">
				<exclude name="components/*.idl"/>
				<exclude name="*.xpi"/>
				<exclude name="extension.properties"/>
				<exclude name=".*"/>
				<exclude name="**/*.in"/>
				<exclude name="**/*.pspimage"/>
			</fileset>
		</copy>
		<delete dir="${builddir}/bin"/>
		<delete dir="${builddir}/build"/>
	</target>
	
	<target name="package" depends="init,copy,preprocess,components">
		<zip basedir="${builddir}" destfile="${outputdir}/${extension.name}.xpi"/>
	</target>
	
</project>
